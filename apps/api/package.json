    "dotenv": "^16.6.1",
    "fastify": "^5.3.0",
    "fastify-type-provider-zod": "^4.0.2",
    "pg": "^8.16.3",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.20.0",
    "prettier": "^3.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  }
